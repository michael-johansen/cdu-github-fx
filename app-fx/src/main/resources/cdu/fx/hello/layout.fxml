<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToolBar?>
<Scene height="400" width="800" fx:controller="cdu.fx.hello.HelloWorldController" xmlns:fx="http://javafx.com/fxml">
    <VBox>
        <ToolBar>
            <Button text="Norsk" onAction="#changeToNorwegian"/>
            <Button text="English" onAction="#changeToEnglish"></Button>
        </ToolBar>
        <Label styleClass="label" text="%greeting"></Label>
    </VBox>
    <stylesheets>
        <URL value="@hello.css"></URL>
    </stylesheets>
</Scene>