<?import javafx.scene.control.Label?>
<?import javafx.scene.Scene?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<Scene xmlns:fx="http://javafx.com/fxml" fx:controller="cdu.HelloController">
    <VBox>
        <!-- Wrap with toolbar, extract to custom component LocaleSelectionToolbar -->
        <Button onAction="#changeToNorsk" text="Norsk"></Button>
        <Button onAction="#changeToEnglish" text="English"></Button>

        <TextField fx:id="myText"></TextField>
        <Label fx:id="myLabel" text="%greeting"></Label>
        <stylesheets>
            <URL value="@../css/hello.css"></URL>
        </stylesheets>
    </VBox>

</Scene>